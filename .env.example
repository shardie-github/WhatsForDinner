# What's For Dinner - Environment Variables Template
# Copy this file to .env.local for local development or configure in your deployment platform

# =============================================================================
# Supabase Configuration (Required)
# =============================================================================
# Get these from your Supabase project settings > API
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Service role key (server-side only, NEVER expose to client)
# Only used for admin operations and server-side API routes
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# =============================================================================
# OpenAI Configuration (Required)
# =============================================================================
# Get from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# =============================================================================
# Stripe Configuration (Required for Payments)
# =============================================================================
# Get from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key-here
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key-here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key-here

# Webhook secret for Stripe webhooks
# Get from https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret-here

# =============================================================================
# Analytics & Monitoring (Optional but Recommended)
# =============================================================================
# Google Analytics (if using)
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# PostHog Analytics (Alternative to Google Analytics)
NEXT_PUBLIC_POSTHOG_KEY=ph_your-posthog-key-here
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Sentry Error Tracking (if using)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_AUTH_TOKEN=your-sentry-auth-token-here
SENTRY_ORG=your-org-slug
SENTRY_PROJECT=your-project-slug

# Uptime Monitoring (for demo purposes, use placeholder values)
UPTIMEROBOT_API_KEY=your-uptimerobot-api-key-here

# =============================================================================
# Feature Flags & Experiments
# =============================================================================
# Experiment configuration file path (optional)
EXPERIMENT_CONFIG_PATH=./experiments

# =============================================================================
# Application Configuration
# =============================================================================
# Application environment
NODE_ENV=production
# or: development, staging, production

# Application URL
NEXT_PUBLIC_APP_URL=https://whats-for-dinner.vercel.app

# =============================================================================
# GitHub Integration (Optional - for CI/CD)
# =============================================================================
GITHUB_TOKEN=your-github-token-here

# =============================================================================
# Vercel Integration (Optional - for deployments)
# =============================================================================
VERCEL_TOKEN=your-vercel-token-here

# =============================================================================
# Slack Integration (Optional - for notifications)
# =============================================================================
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# PagerDuty Integration (Optional - for critical alerts)
# =============================================================================
PAGERDUTY_INTEGRATION_KEY=your-pagerduty-integration-key-here

# =============================================================================
# Email Configuration (Optional - for transactional emails)
# =============================================================================
# Resend (recommended)
RESEND_API_KEY=re_your-resend-api-key

# Or SendGrid
SENDGRID_API_KEY=SG.your-sendgrid-api-key

# Email sender
EMAIL_FROM=noreply@whats-for-dinner.com
EMAIL_REPLY_TO=support@whats-for-dinner.com

# =============================================================================
# Security & Rate Limiting
# =============================================================================
# Rate limiting (requests per minute)
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Session secret for cookies
SESSION_SECRET=your-random-secret-key-here-min-32-chars

# =============================================================================
# Database Configuration
# =============================================================================
# Connection pool settings (if not using Supabase managed)
DATABASE_POOL_MAX=20
DATABASE_POOL_MIN=5

# =============================================================================
# AI/ML Configuration
# =============================================================================
# AI service configuration
AI_ENABLED=true
AI_MAX_RETRIES=3
AI_TIMEOUT_MS=30000

# Cost monitoring
ENABLE_COST_TRACKING=true
COST_ALERT_THRESHOLD=1000

# =============================================================================
# Development/Debug (Development Only)
# =============================================================================
# Debug mode (DO NOT enable in production)
DEBUG=false

# API logging level: error, warn, info, debug
LOG_LEVEL=info

# =============================================================================
# Notes
# =============================================================================
# 1. Never commit .env.local to version control
# 2. Use different keys for development, staging, and production
# 3. Rotate secrets regularly
# 4. Use secret management services in production (Vercel Secrets, AWS Secrets Manager, etc.)
# 5. For production, configure these in your deployment platform's environment variables UI
#
# Vercel: https://vercel.com/docs/projects/environment-variables
# Supabase: Dashboard > Settings > API
# Stripe: https://dashboard.stripe.com/apikeys
# OpenAI: https://platform.openai.com/api-keys