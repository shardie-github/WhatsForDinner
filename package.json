{
  "name": "whats-for-dinner-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=@whats-for-dinner/web",
    "dev:mobile": "turbo run dev --filter=@whats-for-dinner/mobile",
    "dev:doctor": "node scripts/dev-doctor.js",
    "build": "turbo run build",
    "build:packages": "turbo run build --filter=@whats-for-dinner/*",
    "build:web": "turbo run build --filter=@whats-for-dinner/web",
    "build:mobile": "turbo run build --filter=@whats-for-dinner/mobile",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "supply-chain:audit": "node scripts/supply-chain-audit.js",
    "supply-chain:check": "npm audit --audit-level=moderate",
    "supply-chain:fix": "npm audit fix",
    "performance:audit": "node scripts/performance-budgets.js",
    "performance:lighthouse": "lighthouse http://localhost:3000 --output=json --output-path=./REPORTS/lighthouse.json",
    "performance:budget": "node scripts/performance-budgets.js --check-budgets",
    "analyze:bundle": "node scripts/bundle-report.mjs",
    "bundle:check": "node scripts/bundle-report.mjs --check-budgets",
    "secrets:scan": "node scripts/secrets-scan.mjs --check",
    "db:perf": "node scripts/db-slowquery-check.mjs --check",
    "rls:test": "node scripts/rls-smoke.ts --check",
    "health:check": "node scripts/healthcheck.js --check",
    "cost:guard": "node scripts/cost-guard.mjs --check",
    "smoke:test": "cd apps/web && npx playwright test tests/smoke.spec.ts",
    "check:all": "node scripts/run-all-checks.mjs",
    "experimentation:setup": "node scripts/experimentation-layer.js",
    "docs:lint": "node scripts/docs-quality-gate.js",
    "repo:hygiene": "node scripts/repo-hygiene.js",
    "chaos:test": "node scripts/chaos-testing.js",
    "backup:run": "node scripts/backups-dr.js",
    "privacy:audit": "node scripts/privacy-gdpr.js",
    "blind-spot:analyze": "node scripts/blind-spot-hunter.js",
    "phases:complete": "node scripts/complete-all-phases.js",
    "test:coverage": "turbo run test:coverage",
    "test:ci": "turbo run test:ci",
    "release": "turbo run release",
    "doctor": "turbo run doctor",
    "a11y": "turbo run a11y",
    "obs": "turbo run obs",
    "perf:analyze": "turbo run perf:analyze",
    "perf:monitor": "turbo run perf:monitor",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "type-check": "turbo run type-check",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md}\"",
    "clean": "turbo run clean",
    "install:all": "pnpm install && pnpm run build:packages",
    "security:audit": "turbo run security:audit",
    "security:scan": "turbo run security:scan",
    "security:deps": "turbo run security:deps",
    "security:secrets": "turbo run security:secrets",
    "security:headers": "turbo run security:headers",
    "optimize:images": "node scripts/optimize-assets.js",
    "optimize:assets": "node scripts/optimize-assets.js",
    "analyze:assets": "node scripts/assets-discipline.js",
    "deploy:staging": "turbo run build && echo 'Deploying to staging...'",
    "deploy:canary": "turbo run build && echo 'Deploying to canary...'",
    "deploy:production": "turbo run build && echo 'Deploying to production...'",
    "migrate:emc": "node scripts/migrate-emc.ts",
    "migrate:emc:check": "node scripts/migrate-emc.ts --check",
    "dr:validate": "node scripts/clone-and-restore-check.ts",
    "slo:check": "node scripts/slo-checker.ts --check",
    "slo:report": "node scripts/slo-checker.ts",
    "chaos:mini": "node scripts/chaos-mini.ts",
    "chaos:mini:check": "node scripts/chaos-mini.ts --check",
    "ai:audit": "node -e \"require('./ai/self_diagnose.ts').default.prototype.runWeeklyAudit()\"",
    "ai:insights": "node -e \"require('./ai/insights_agent.mjs').default.prototype.runWeeklyAnalysis()\"",
    "ai:cost": "node -e \"require('./ai/ai_autoscale.ts').default.prototype.runDailyAnalysis()\"",
    "ai:privacy": "node -e \"require('./ai/privacy_guard.ts').default.prototype.runPrivacyAudit()\"",
    "ai:embeddings": "node scripts/generate-embeddings.mjs",
    "ai:search": "node -e \"console.log('AI search available at /functions/search-ai')\"",
    "ai:docs": "node scripts/generate-docs-ai.mjs",
    "ai:release-notes": "node scripts/release-notes-ai.mjs",
    "ai:onboard": "node scripts/onboard-ai.mjs",
    "ai:dashboard": "node scripts/ai-dashboard.mjs",
    "futurecheck": "npx tsx scripts/futurecheck.ts",
    "watcher:db": "npx tsx -e \"require('./watchers/db_integrity.watcher.ts').default.prototype.runNightlyCheck()\"",
    "watcher:api": "npx tsx -e \"require('./watchers/api_contract.watcher.ts').default.prototype.runNightlyCheck()\"",
    "watcher:ai": "npx tsx -e \"require('./watchers/ai_performance.watcher.ts').default.prototype.runNightlyCheck()\"",
    "ai:status": "node -e \"console.log('AI System Status: Active')\""
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.76.1"
  },
  "devDependencies": {
    "@types/node": "^20",
    "prettier": "^3.2.5",
    "turbo": "^1.13.4",
    "typescript": "^5",
    "openai": "^6.7.0",
    "@octokit/rest": "^20.0.2",
    "glob": "^11.0.0",
    "tsx": "^4.20.6"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18.0.0 <21.0.0",
    "pnpm": ">=8.0.0"
  }
}